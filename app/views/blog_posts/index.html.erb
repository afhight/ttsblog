<p id="notice"><%= notice %></p>

<h1>All Blog Posts</h1>


  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-4">
        <div class="well">
          <p> <%= "#{blog_post.title}, #{blog_post.user.username}, #{blog_post.blog_entry[0..50]} ..." %></p>
        
        <p><%= link_to 'Full Post ', blog_post %>
        <%= link_to '- Edit ', edit_blog_post_path(blog_post) %>
        <%= link_to '- Destroy ', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
    <% end %>
  </div>


<br>

<%= link_to 'New Blog post', new_blog_post_path %>
